{
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "mocha": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none"
  },
  "private": true,
  "scripts": {
    "build": "tsc",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier --write index.ts",
    "fixpack": "npx fixpack",
    "lint": "run-s lint:*",
    "lint:prettier": "prettier --check index.ts",
    "lint:tsc": "tsc --noEmit",
    "test": "mocha",
    "watch": "tsc --watch"
  }
}
