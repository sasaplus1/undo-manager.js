{
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.31",
    "mocha": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "mocha": {
    "require": "ts-node/register",
    "extensions": [
      "ts"
    ],
    "spec": [
      "index.test.ts"
    ],
    "watch-files": [
      "index.ts",
      "index.test.ts"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none"
  },
  "private": true,
  "scripts": {
    "build": "tsc",
    "fix": "run-s fix:*",
    "fix:fixpack": "npx fixpack",
    "fix:prettier": "prettier --write index.ts index.test.ts",
    "lint": "run-s lint:*",
    "lint:fixpack": "npx fixpack --dryRun",
    "lint:prettier": "prettier --check index.ts index.test.ts",
    "lint:tsc": "tsc --noEmit",
    "test": "mocha",
    "watch": "tsc --watch"
  }
}
